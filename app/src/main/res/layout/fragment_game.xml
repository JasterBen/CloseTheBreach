<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ListView
        android:id="@+id/game_heroes_list"
        android:layout_width="@dimen/game_hero_card_width"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_margin="@dimen/game_margin">
    </ListView>

    <hokan.closethebreach.FieldView
        android:id="@+id/game_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:layout_toRightOf="@+id/game_heroes_list"
        android:layout_below="@+id/game_info_bar"
        android:layout_margin="@dimen/game_margin"/>

    <RelativeLayout
        android:id="@+id/game_info_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/game_life_card"
        android:layout_toRightOf="@id/game_heroes_list"
        android:layout_marginTop="@dimen/game_margin"
        android:layout_marginRight="@dimen/game_margin"
        android:layout_marginLeft="@dimen/game_margin">

        <TextView
            android:id="@+id/life_number_text"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/game_life_card"
            android:gravity="center"
            android:textSize="18sp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginRight="@dimen/game_info_bar_margin"
            android:layout_marginLeft="@dimen/game_info_bar_margin"/>

        <TextView
            android:id="@+id/game_xp_text"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/game_life_card"
            android:gravity="center"
            android:textSize="18sp"
            android:layout_toRightOf="@+id/life_number_text"
            android:layout_alignParentTop="true"
            android:layout_marginRight="@dimen/game_info_bar_margin"
            android:layout_marginLeft="@dimen/game_info_bar_margin"/>


    </RelativeLayout>



</RelativeLayout>