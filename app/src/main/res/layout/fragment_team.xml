<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="#e3c27b">
    <TextView
        android:id="@+id/team_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/team_title"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="#000000"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="20dp"/>

    <GridView
        android:id="@+id/team_grid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numColumns="5"
        android:horizontalSpacing="@dimen/grid_horizontal_spacing"
        android:verticalSpacing="@dimen/grid_vertical_spacing"
        android:layout_marginBottom="20dp">
    </GridView>

    <Button
        android:id="@+id/team_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/team_button"
        android:layout_gravity="center_horizontal"
        android:gravity="center"/>



</LinearLayout>